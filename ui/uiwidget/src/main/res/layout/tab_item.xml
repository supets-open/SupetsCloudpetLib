<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/right_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="horizontal" >

    <View
        android:id="@+id/view1"
        style="@style/line_vertical"
        android:layout_height="@dimen/px36"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@drawable/color_float_tab_text"
        android:textSize="@dimen/float_tab_text_size" />

    <TextView
        android:id="@+id/right_textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@drawable/color_float_tab_text"
        android:textSize="@dimen/float_tab_text_size"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/newsTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size6px"
        android:layout_marginTop="-3dp"
        android:background="@drawable/news_dian"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</LinearLayout>